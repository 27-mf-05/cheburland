{
  "name": "client-server-template-with-vite",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && node init.js && lerna clean && yarn && lerna bootstrap",
    "build:client": "lerna run build --scope=client",
    "build:server": "lerna run build --scope=server",
    "build": "yarn build:client && yarn build:server",
    "dev:client": "lerna run dev  --scope=client",
    "dev:server": "lerna run dev --scope=server",
    "dev": "yarn build && lerna run dev --parallel",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "preview": "yarn build && lerna run preview --parallel",

    "docker": "docker-compose -f docker-compose.db.yml -f docker-compose.prod.yml up --build -d",
    "docker:up": "docker-compose -f docker-compose.db.yml -f docker-compose.prod.yml up",
    "docker:build": "docker-compose -f docker-compose.db.yml -f docker-compose.prod.yml build",
    "docker:dev": "docker-compose -f docker-compose.db.yml -f docker-compose.dev.yml up -d && yarn dev",
    "docker:stop": "docker-compose -f docker-compose.db.yml -f docker-compose.dev.yml -f docker-compose.prod.yml stop"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.3.9",
    "lerna": "^5.4.3"
  }
}
